<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.adams.cambook.dao.entities.Connections" table="connections">
		<id name="connectionId" type="integer" column="Connection_ID">
            <generator class="increment" />
		</id>
		<property name="personFK">
			<column name="Person_FK" />
		</property>
		<property name="connectionFK">
			<column name="Connection_FK" />
		</property>
		
	</class>
</hibernate-mapping>
