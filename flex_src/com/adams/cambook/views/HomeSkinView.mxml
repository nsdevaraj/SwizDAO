<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark" 
		xmlns:mx="library://ns.adobe.com/flex/mx" 
		xmlns:mediators="com.adams.cambook.views.mediators.*"   xmlns:components="com.adams.cambook.views.components.*">	
	<fx:Metadata>
		[HostComponent("com.adams.cambook.views.mediators.HomeViewMediator")]
	</fx:Metadata>  
	<s:states>
		<s:State name="BasicState" /> 
	</s:states>
	<s:layout>
		<s:BasicLayout/>
	</s:layout> 
	<fx:Declarations>
		<mx:ArrayCollection id="dp">
			<fx:String>Flash</fx:String> 
			<fx:String>Director</fx:String> 
			<fx:String>Dreamweaver</fx:String> 
			<fx:String>ColdFusion</fx:String> 
		</mx:ArrayCollection>	
	</fx:Declarations>
	<s:HGroup horizontalCenter="0" height="100%" width="100%" verticalCenter="0" paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5" >	
		<s:Panel id="infoPanel" height="100%" width="200" title="Information" >
			<s:Scroller width="100%" height="100%">
				<s:VGroup width="100%" height="100%" horizontalAlign="center">
					 <mx:Image source="assets/images/3.jpg" />
					<mx:Form id="personForm" horizontalCenter="0"> 
						<mx:FormItem label="First Name" required="true">
							<s:Label id="personFirstname"/>
						</mx:FormItem>
						<mx:FormItem label="Last Name">
							<s:Label id="personLastname" />
						</mx:FormItem>
						<mx:FormItem label="Email" required="true">
							<s:Label id="personEmail" />
						</mx:FormItem>
						<mx:FormItem>
							<components:NativeButton id="passwordBtn" label="Modify Information"/>
						</mx:FormItem>  
					</mx:Form>
					<mx:Form id="passwordForm" includeInLayout="false" visible="false">
						<mx:FormHeading label="Modify Information"/>
						<mx:FormItem label="Old Password" required="true">
							<s:TextInput id="oldPersonPassword" displayAsPassword="true"/>
						</mx:FormItem>
						<mx:FormItem label="New Password" required="true">
							<s:TextInput id="personPassword1" displayAsPassword="true"/>
						</mx:FormItem>
						<mx:FormItem label="Retype Password" required="true">
							<s:TextInput id="personPassword2" displayAsPassword="true"/>
						</mx:FormItem>
						<mx:FormItem label="Twitter id">
							<s:TextInput id="tweetId"/>
						</mx:FormItem> 
						<mx:FormItem label="Twitter Password">
							<s:TextInput id="tweetPassword" displayAsPassword="true"/>
						</mx:FormItem> 
						<mx:FormItem label="Password Question">
							<s:ComboBox id="personQuestion" />
						</mx:FormItem>
						<mx:FormItem label="Password Answer">
							<s:TextInput id="personAnswer"/>
						</mx:FormItem>
						<mx:FormItem label="City">
							<s:TextInput id="personCity"/>
						</mx:FormItem>
						<mx:FormItem label="Country">
							<s:TextInput id="personCountry"/>
						</mx:FormItem>
						<mx:FormItem label="Postal Code">
							<s:TextInput id="personPostalCode" />
						</mx:FormItem>
						<mx:FormItem>
							<components:NativeButton id="submitBtn" label="Save" enabled="false" />
							<components:NativeButton id="cancelBtn" label="Cancel"/>
						</mx:FormItem>
					</mx:Form> 
					<s:Label text="Friends count" />
				</s:VGroup>
			</s:Scroller>
		</s:Panel>
		<s:VGroup width="100%" height="100%">
			<s:HGroup verticalAlign="contentJustify" width="100%">
				<s:TextArea id="updateTxt" height="50" width="100%"/>	
				<components:NativeButton label="update" id="update"/>
				<components:NativeButton label="tweet" id="tweet"/>
			</s:HGroup>
			<mx:TabNavigator width="100%" height="100%">
				<s:NavigatorContent label="Wall">
					<s:Scroller width="100%" height="100%">
						<s:VGroup paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5">
						<components:UpdateCard />
						<components:UpdateCard />
						<components:UpdateCard />
						<components:UpdateCard />
					</s:VGroup>
					</s:Scroller>
				</s:NavigatorContent>
				<s:NavigatorContent label="My Update">
					<s:Scroller width="100%" height="100%">
						<s:VGroup paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5">
						<components:UpdateCard />
						<components:UpdateCard />
						<components:UpdateCard />
						<components:UpdateCard />
					</s:VGroup>
						</s:Scroller>
				</s:NavigatorContent>
				<s:NavigatorContent label="Message">
					<s:Scroller width="100%" height="100%"> 
						<s:VGroup paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5">
						<components:UpdateCard />
						<components:UpdateCard />
						<components:UpdateCard />
						<components:UpdateCard />
					</s:VGroup>
					</s:Scroller>
				</s:NavigatorContent>
			</mx:TabNavigator> 
		</s:VGroup>
		<s:VGroup id="searchPanel" height="100%" width="200">
			<s:VGroup width="100%" height="150">
				<s:HGroup width="100%" height="30">
					<s:Label text="search"/>
					<s:TextInput />
				</s:HGroup>
				<s:Scroller top="30" width="100%" height="100%">
					<s:VGroup paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5">
						<components:BuddyCard />
						<components:BuddyCard />
						<components:BuddyCard />
					</s:VGroup>	
				</s:Scroller>
			</s:VGroup>	
			<s:Panel height="120" width="100%" title="Friend Suggestion" >
				<s:Scroller width="100%" height="100%">
					<s:VGroup paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5">
						<components:BuddyCard />
						<components:BuddyCard />
					</s:VGroup>	
				</s:Scroller>	
			</s:Panel>	
			<s:Panel height="100%" width="100%"  title="Friends List" >
				<s:Scroller width="100%" height="100%">
					<s:VGroup paddingBottom="5" paddingLeft="5" paddingRight="5" paddingTop="5">
					<components:BuddyCard />
					<components:BuddyCard />
					<components:BuddyCard />
					<components:BuddyCard />
					<components:BuddyCard />
					<components:BuddyCard />
					<components:BuddyCard />
					<components:BuddyCard />
					<components:BuddyCard />
					<components:BuddyCard />
					<components:BuddyCard />
					<components:BuddyCard />
					</s:VGroup>
				</s:Scroller>	
			</s:Panel>	
		</s:VGroup>
	</s:HGroup> 
</s:Skin>